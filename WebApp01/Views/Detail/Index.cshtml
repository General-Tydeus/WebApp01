@using WebApp01.Models;
@model CharacterModel;
<div class="row">
    <div class="col-12">
        <nav>
            <ul class="breadcrumb">
                <li class="breadcrumb-item active"> <a href="@Url.Action("Index", "Home")">Home</a> </li>
                <li class="breadcrumb-item active"> <a href="@Url.Action("Index", "Character")">Character</a> </li>
                <li class="breadcrumb-item active"> Details </li>
            </ul>
        </nav>
    </div>
</div>
<div class="row">
    @if (Model != null)
    {
        <div class="col-4">
            <img src="@Url.Content($"~/images/characters/{Model.Id}.jpg")" style="max-height: 300px" class="card-img-top" alt="@Model.Name">
        </div>
        <div class="col-8">
            <p class="lead">
                @Html.Raw(Model.Description)
            </p>
        </div>
    }
    else
    {
        <p>Character not found</p>
        <p>@Model.Id</p>

    }


</div>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="@Url.Content("~/images/logo.jpg")" width="50" height="50" class="rounded-circle" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-light" href="@Url.Action("Index", "Character")">Characters</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-light" href="@Url.Action("Index", "Video")">Videos</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-light" href="@Url.Action("About", "Home")">About</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-light" href="@Url.Action("Privacy", "Home")">Privacy</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="content border border-primary p-3">
            @RenderBody()
        </div>
        <footer>
            <p>&copy 2024 - Programmer</p>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
